{
    "env": {
        "commonjs": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "indent": ["error", 2],
      "semi": [1, "always"]
    }
}
